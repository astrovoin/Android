<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/weatherView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_chosen_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@id/weatherView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/sun_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/weatherView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chosen_city" />

    <LinearLayout
        android:layout_width="@dimen/width_linearlt_weather_activity"
        android:layout_height="@dimen/height_linearlt_weather_activity"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherView">

        <TextView
            android:id="@+id/wind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_checkbox_weather_activity"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/rain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_checkbox_weather_activity"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/fog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_checkbox_weather_activity"
            android:gravity="center_horizontal" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>







