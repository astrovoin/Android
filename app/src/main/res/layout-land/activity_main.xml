    <android.support.v7.widget.CardView
        android:id="@+id/city1"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_CardView"
        android:layout_margin="@dimen/margin_CardView"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/city2"
        app:layout_constraintEnd_toStartOf="@+id/placeholder_coat_of_arms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_get_weather"
        app:layout_constraintVertical_bias="0.62"
        card_view:cardCornerRadius="@dimen/CornerRadius_CardView"
        card_view:cardElevation="@dimen/Elevation_CardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_TextView_card"
            android:text="@string/card_city1" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/city2"
        android:layout_width="280dp"
        android:layout_height="@dimen/height_CardView"
        android:layout_margin="@dimen/margin_CardView"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/city3"
        app:layout_constraintEnd_toEndOf="@+id/editText"

        app:layout_constraintEnd_toStartOf="@+id/placeholder_coat_of_arms"
        app:layout_constraintTop_toTopOf="@id/city1"
        card_view:cardCornerRadius="@dimen/CornerRadius_CardView"
        card_view:cardElevation="@dimen/Elevation_CardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_TextView_card"
            android:text="@string/card_city2" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/city3"
        android:layout_width="280dp"
        android:layout_height="@dimen/height_CardView"
        android:layout_margin="@dimen/margin_CardView"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/city2"
        app:layout_constraintTop_toTopOf="@id/city2"
        card_view:cardCornerRadius="@dimen/CornerRadius_CardView"
        card_view:cardElevation="@dimen/Elevation_CardView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_TextView_card"
            android:text="@string/card_city3" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>